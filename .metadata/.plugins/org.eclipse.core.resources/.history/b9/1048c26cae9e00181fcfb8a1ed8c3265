	          // Read input from the scanner here
	          String input = sc.nextLine();
	          String[] allInput = input.split(" ");
	          if(allInput[0].equals("Hotel")) {
	        	  Hotel
	          }
	      }
	      catch (FileNotFoundException e)
	      {
	          System.out.println(e.getMessage());
	      }
	      finally
	      {
	          if (sc != null) sc.close();
	      }
	}
}
